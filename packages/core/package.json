{
  "name": "@nishan/core",
  "version": "0.0.0",
  "description": "Core package for nishan",
  "author": "Safwan Shaheer <devorein00@gmail.com>",
  "homepage": "https://github.com/Devorein/Nishan#readme",
  "license": "MIT",
  "main": "./dist/Nishan.js",
  "directories": {
    "lib": "api",
    "test": "tests"
  },
  "files": [
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Devorein/Nishan.git"
  },
  "scripts": {
    "build": "npm run clean && npx tsc --removeComments",
    "clean": "npx rimraf ./dist",
    "watch": "npx tsc -w",
    "lint": "npx eslint . --color",
    "prepack": "npm run test:build",
    "prepublishOnly": "npm run test:build",
    "test": "npx jest --runInBand ./tests",
    "test:build": "npm run test && npm run build",
    "transpile": "npx babel src --out-dir dist --extensions .ts",
    "typecheck": "npx tsc --noEmit --incremental false",
    "preversion": "npm run test"
  },
  "bugs": {
    "url": "https://github.com/Devorein/Nishan/issues"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "colors": "^1.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nishan/types": "0.0.0"
  }
}